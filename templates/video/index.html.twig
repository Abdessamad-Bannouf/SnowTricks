{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="/css/crudVideo.css" rel="stylesheet">
{% endblock %}

{% block title %}Video index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Video index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for video in videos %}
                <tr>
                    <td>{{ video.id }}</td>
                    <td>{{ video.name }}</td>
                    <td>
                        <a href="{{ path('video_show', {'id': video.id}) }}">Voir</a>
                        <a href="{{ path('video_edit', {'id': video.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun resultat trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('video_new') }}">Ajouter une nouvelle video</a>
    </div>
{% endblock %}
