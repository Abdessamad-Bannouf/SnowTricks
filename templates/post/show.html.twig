{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ post.photo }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{% for photo in post.photos %}
                        {{ photo.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{% for video in post.videos %}
                        {{ video.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Create_at</th>
                <td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
