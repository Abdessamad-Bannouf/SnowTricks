{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block stylesheets %}
    <link href="/css/Post.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Post index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Video</th>
                    <th>Create_at</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.name }}</td>
                    <td>{{ post.description }}</td>
                    <td>{{ post.photo }}</td>
                    <td>{{ post.date | date('d/m/y') }} à {{ post.date | date('H:i') }}</td>
                    <td>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('post_show', {'slug': post.slug}) }}">show</a>
                        <a href="{{ path('post_edit', {'slug': post.slug}) }}">edit</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('post_new') }}"><button class="btn btn-success">Créer un trick</button></a>
        {% endif %}
    </div>
{% endblock %}
